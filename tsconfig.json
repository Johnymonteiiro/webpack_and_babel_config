{
  "compilerOptions": {                                   
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",                               
    "moduleResolution": "node",                        
    "resolveJsonModule": true,                     
    "allowJs": true,                                               
    "noEmit": true,                                  
    "isolatedModules": true,
    "esModuleInterop":true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,    
    "forceConsistentCasingInFileNames": true,                                 
  },

  "include": ["src"]
}
